<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/bt_select_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ando_file_select_one_and_compress"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_13"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_select_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ando_file_select_one"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_13"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F1F1F7"
            android:text="@string/str_ando_file_delete"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/font_13"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_origin"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_place_holder"
            android:visibility="visible"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_compressed"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_place_holder"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/str_ando_file_original_image"
            android:textColor="@color/color_main_theme_dark"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/str_ando_file_error_info"
            android:padding="3dp"
            android:textColor="@android:color/holo_red_dark"
            android:textColorHint="@color/color_font_black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_compressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/str_ando_file_after_compression"
            android:textColor="@color/color_main_theme_dark"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/str_ando_file_select_result"
            android:padding="3dp"
            android:textColor="@color/color_font_black"
            android:textColorHint="@color/color_font_black"
            android:textSize="12sp"
            android:visibility="visible" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>